<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">

    <!-- Coffee List -->
    <fragment
        android:id="@+id/listFragment"
        android:name="com.fredcodecrafts.lab_week_04.ListFragment"
        android:label="Coffee List"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <!-- Detail Page -->
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.fredcodecrafts.lab_week_04.DetailFragment"
        android:label="Detail"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/action_detailFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
    </fragment>

    <!-- Favorites -->
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.fredcodecrafts.lab_week_04.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />

    <!-- âœ… Cafe -->
    <fragment
        android:id="@+id/cafeFragment"
        android:name="com.fredcodecrafts.lab_week_04.CafeFragment"
        android:label="Cafe"
        tools:layout="@layout/fragment_cafe" />

</navigation>
